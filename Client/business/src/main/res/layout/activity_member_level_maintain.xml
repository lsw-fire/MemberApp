<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lsw.system.member.business.Member_Level_Maintain"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Normal_Field_Height"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="会员级别"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></Spinner>
    </LinearLayout>

    <EditText android:textSize="20dp"
        style="@style/Normal_Field_Height"
        android:hint="折扣率:0.8" />

    <Button style="@style/Normal_Field_Height" android:layout_marginTop="10dp"
        android:text="保存" />

    <ListView android:id="@+id/lvProductPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
