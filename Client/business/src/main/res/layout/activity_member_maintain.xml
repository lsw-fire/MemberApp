<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText style="@style/Normal_Field_Height" android:textSize="20dp"
                android:hint="姓名:xx先生" />


            <EditText style="@style/Normal_Field_Height" android:textSize="20dp"
                android:hint="车牌:津Hxxxxx" />


            <EditText style="@style/Normal_Field_Height" android:textSize="20dp"
                android:hint="电话:159xxxxxxxx" android:inputType="number" />

            <TextView android:textSize="20dp"
                style="@style/Normal_Field_Height"
                android:gravity="center|left"
                android:text="会员号0001" />


            <LinearLayout
                style="@style/Normal_Field_Height"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="会员级别"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Spinner>
            </LinearLayout>

            <Button style="@style/Normal_Field_Height" android:layout_marginTop="10dp"
                android:text="保存" />


        </LinearLayout>
</LinearLayout>